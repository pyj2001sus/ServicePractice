<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.co.tjeit.servicepractice">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ServiceTestActivity"></activity>

        <service android:name=".CountService">
            <intent-filter>
                <action android:name="kr.co.tjeit.servicepractice.CountService"/>
            </intent-filter>
        </service>
        
        <service android:name=".CountService2">
            <intent-filter>
                <action android:name="kr.co.tjeit.servicepractice.CountService2"/>
            </intent-filter>
        </service>

        <service android:name=".MusicService">
            <intent-filter>
                <action android:name="kr.co.tjeit.servicepractice.MusicService"/>
            </intent-filter>
        </service>

    </application>

</manifest>